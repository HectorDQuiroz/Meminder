<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_Sub"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:elevation="10dp"
        android:focusable="true"
        app:cardBackgroundColor="@color/black"
        app:cardCornerRadius="20dp"
        tools:targetApi="lollipop">

        <LinearLayout
            android:id="@+id/layout_Secundario_Card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <!--Icono de dinero-->
            <ImageView
                android:id="@+id/imgv_IconDollar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:contentDescription="@string/img_logo"
                app:srcCompat="@mipmap/dollar" />
            <!--Nombre de la tarjeta y plan-->
            <LinearLayout
                android:id="@+id/layout_Terceario_Name_Plan"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">
                <!--Nombre de la sub-->
                <TextView
                    android:id="@+id/txt_name_Card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/arial"
                    android:gravity="start"
                    android:text="@string/nombre_Card"
                    android:textColor="@color/white"
                    android:textSize="18sp" />
                <!--Nombre del plan-->
                <TextView
                    android:id="@+id/txt_plan_Card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/arial"
                    android:gravity="start"
                    android:text="@string/tipo_Plan"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </LinearLayout>
            <!--Cantidad-->
            <TextView
                android:id="@+id/txt_cantidad_Card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:fontFamily="@font/arial"
                android:gravity="start"
                android:text="@string/Cantidad"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:drawableLeftCompat="@drawable/ic_dollar" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
